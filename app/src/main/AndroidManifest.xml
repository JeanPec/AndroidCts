<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shindra">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:name=".MyApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CtsAppFip3A">

        <activity android:name=".LineTramActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ScheduleActivity"
            android:parentActivityName=".LineTramActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LineTramActivity" />

        </activity>

        <activity android:name=".LineMapActivity"
            android:parentActivityName=".ScheduleActivity">

                <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ScheduleActivity" />

        </activity>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyB-PUj9rWHjXJveAxRnMtHGM54ZpxmEGDU"/>

    </application>
</manifest>