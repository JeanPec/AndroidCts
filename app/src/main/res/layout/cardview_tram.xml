<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:elevation="4dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/lignedetram"
            app:srcCompat="@drawable/ic_tram_a" />

        <ImageView
            android:id="@+id/photo_tram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tram"
            android:adjustViewBounds="true"
            android:contentDescription="@string/photo_de_tram"
            app:srcCompat="@drawable/nouveau_tram_strasbourg" />

        <Button
            android:id="@+id/bouton_horaire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo_tram"
            android:background="@android:color/transparent"
            android:text="@string/texte_bouton_horaire"
            android:textColor="@color/primary" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>