<?xml version="1.0" encoding="utf-8"?>
<!-- constraintlayout removed : 1 cardview filled the entire screen -->
<!-- Now, the cardviews are well-structured in the recycler view -->

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view_tram="http://schemas.android.com/apk/res-auto"

        android:id="@+id/card_view_tram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"

        card_view_tram:cardCornerRadius="4dp"
        card_view_tram:cardElevation="4dp"
        card_view_tram:layout_constraintEnd_toEndOf="parent"
        card_view_tram:layout_constraintStart_toStartOf="parent"
        card_view_tram:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/illustrationPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tramLinePicture"
                android:adjustViewBounds="true"
                card_view_tram:srcCompat="@drawable/nouveau_tram_strasbourg" />

            <ImageView
                android:id="@+id/tramLinePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                card_view_tram:srcCompat="@drawable/tram_a" />

            <Button
                android:id="@+id/diaryButton"
                style="@style/body_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/illustrationPicture"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:padding="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@android:color/transparent"
                android:text="Horaire"
                android:textColor="@color/primary" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
