<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/line_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:elevation="4dp"
    android:layout_marginLeft="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo_ligne"
            android:src="@drawable/ic_tram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
        </ImageView>

        <ImageView
            android:id="@+id/photo_tram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_ligne"
            android:src="@drawable/nouveau_tram_strasbourg"
            android:adjustViewBounds="true">
        </ImageView>

        <TextView
            android:id="@+id/schedule_button"
            android:textColor="@color/primary"
            android:layout_width="wrap_content"
            android:layout_below="@id/photo_tram"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/voir_horaire"></TextView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>