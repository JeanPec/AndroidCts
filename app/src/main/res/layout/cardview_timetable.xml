<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginHorizontal="16sp"
    android:layout_marginVertical="8sp"
    android:elevation="4sp"
    app:cardCornerRadius="4sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8sp">

        <TextView
            android:id="@+id/cvTimetable_stopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/H6"
            android:textColor="@color/Headline" />

        <TextView
            android:id="@+id/cvTimetable_lineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvTimetable_stopName"
            style="@style/BODY_2"
            android:textColor="@color/Primary"/>

        <TextView
            android:id="@+id/cvTimetable_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/H6"
            android:textColor="@color/Headline"/>

        <TextView
            android:id="@+id/cvTimetable_nextStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cvTimetable_NextStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/BODY_2"
            android:textColor="@color/Body"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
