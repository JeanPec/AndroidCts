<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iconTram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_tram"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>

        <ImageView
            android:id="@+id/imageTram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iconTram"
            app:srcCompat="@drawable/nouveau_tram_strasbourg"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"/>

        <Button
            android:id="@+id/btnSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HORAIRE"
            android:layout_below="@id/imageTram"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/primary"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>